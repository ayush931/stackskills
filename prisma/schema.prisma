generator client {
  provider      = "prisma-client"
  output        = "../generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "darwin", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  phone      String   @unique
  className  String
  schoolName String
  password   String
  session    String?  @unique
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  stackId    String?  @unique

  @@index([name])
  @@index([schoolName])
}

enum Role {
  USER
  ADMIN
}
